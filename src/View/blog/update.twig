{% extends 'layout/layout.twig' %}

{% block title %}{{ comment.title }}{% endblock %}

{% block description %}DÃ©veloppement Web - {{ comment.title }} - {{ comment.content }}{% endblock %}

{% block body %}

    <!-- Update comment form -->
    <div class="px-3 py-4 flex justify-center">
        <form action={{ url('comment!update', {'id': comment.id}) }} method="post" class="w-full max-w-lg">
          
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password" >
                    Contenu
                </label>
                <textarea class=" no-resize appearance-none block w-full bg-gray-200 text-gray-800 border 
                    border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white 
                    focus:border-gray-500 h-48 resize-none" id="message" name="content">{{comment.content }}</textarea>
                </div>
                <input name="date" type="hidden" value="{{ date()|date('Y-m-d H:i:s') }}">
                <input name="article_id" type="hidden" value="{{ article_id }}">

            </div>
            <div class="md:flex md:items-center">
                <div class="md:w-1/3">
                <button class="shadow bg-teal-400 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
                    Modifier
                </button>
                </div>
                <div class="md:w-2/3"></div>
            </div>
        </form>
    </div>
{% endblock %}